<Window x:Class="Introl.Demo.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:il="https://github.com/livonskd/introl"
        Title="Introl.Demo"
        Background="{DynamicResource BackgroundFillBrush}"
        Width="1350"
        Height="810">
    <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
        <Border Background="Orange"
                FocusVisualStyle="{StaticResource FocusVisualDefault}"
                Focusable="True"
                CornerRadius="{StaticResource CornerRadiusDefault}"
                Width="120"
                Height="120" />
        <Border Background="MediumPurple"
                FocusVisualStyle="{StaticResource FocusVisualDefault}"
                Focusable="True"
                CornerRadius="{StaticResource CornerRadiusDefault}"
                Width="120"
                Height="120"
                Margin="16,0"/>
        <Border Background="Chartreuse"
                FocusVisualStyle="{StaticResource FocusVisualDefault}"
                Focusable="True"
                CornerRadius="{StaticResource CornerRadiusDefault}"
                il:CornerRadiusAssist.CornerRadius="12"
                Width="120"
                Height="120" />
    </StackPanel>
</Window>