<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:asst="clr-namespace:Introl.Assists">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Introl;component/Dimensions.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!--#region Style: FocusVisualDefault -->
    <Style x:Key="FocusVisualDefault">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border BorderBrush="{DynamicResource OnSurfaceHighBrush}"
                            BorderThickness="1"
                            CornerRadius="{StaticResource CornerRadiusDefault}"
                            Margin="-2"
                            SnapsToDevicePixels="True" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--#endregion-->

</ResourceDictionary>
